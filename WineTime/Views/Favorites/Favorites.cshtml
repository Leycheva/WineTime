@model FavoritesFormModel

@{
    ViewBag.Title = "WishList";
}

@if(!Model.Products.Any())
{
    <h2 class="text-center text-white mt-4">You don't have any products yet!</h2>
}

<div class="container">
    <div class="row">
        <div class="col-10 col-sm-8 col-lg-4">
            <h4 class="text-white text-center mt-3">My Wishlist</h4>
            <ul class="list-group ">
                @foreach (var product in Model.Products)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center mt-2 mb-2">
                        <div class="image-parent">
                            <img src="@product.ImageUrl" class="img-fluid">
                        </div>
                        <div class="card-body text-center">
                            <h5>@product.Name (@product.YearOfManufacture)</h5>
                            <h6>@product.Category</h6>
                            <h6>@product.Price BGN</h6>
                            <a asp-controller="Favorites" asp-action="Remove" asp-route-id="@product.Id" class="btn btn-red mt-2">Remove</a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
