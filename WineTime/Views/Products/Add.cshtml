@model AddProductsServiceModel

@{
    ViewData["Title"] = "Add Product";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 ">
        <h2 class="heading-margin text-center text-white">Add Product</h2>
        <form method="post">
            <div class="form-group text-white">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control">
                 <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="YearOfManufacture"></label>
                <input asp-for="YearOfManufacture" class="form-control">
                 <span asp-validation-for="YearOfManufacture" class="small text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                 <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="Sort"></label>
                <select asp-for="Sort" class="form-control">
                    <option value="1">Dry</option>
                    <option value="2">Sweet</option>
                    <option value="3">Mild</option>
                    <option value="4">Soft</option>
            </select>
                 <span asp-validation-for="Sort" class="small text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                 <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach( var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
             <div class="form-group text-white">
                <label asp-for="ManufactureId"></label>
                <select asp-for="ManufactureId" class="form-control">
                    @foreach( var manufacture in Model.Manufactures)
                    {
                        <option value="@manufacture.Id">@manufacture.ManufactureName, @manufacture.Region</option>
                    }
                </select>
            </div>
       
            <input class="btn btn-red mt-2" type="submit" value="Save" />
        </form>
    </div>
</div>
