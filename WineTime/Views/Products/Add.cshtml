@model AddProductFormModel

@{
    ViewData["Title"] = "Add Product";
}


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 ">
        <h2 class="heading-margin text-center">Add Product</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" class="mt-1">
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="YearOfManufacture"></label>
                <input asp-for="YearOfManufacture" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <input asp-for="Type" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach( var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
             <div class="form-group">
                <label asp-for="ManufactureId"></label>
                <select asp-for="ManufactureId" class="form-control">
                    @foreach( var manufacture in Model.Manufactures)
                    {
                        <option value="@manufacture.Id">@manufacture.ManufactureName, @manufacture.Region</option>
                    }
                </select>
            </div>
       
            <input class="btn btn-danger" type="submit" value="Save" />
        </form>
    </div>
</div>
